<%- model_class = InventoryPiece -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:inventory_id) %></th>
      <th><%= model_class.human_attribute_name(:colored_piece_id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inventory_pieces.each do |inventory_piece| %>
      <tr>
        <td><%= link_to inventory_piece.id, inventory_piece_path(inventory_piece) %></td>
        <td><%= inventory_piece.inventory_id %></td>
        <td><%= inventory_piece.colored_piece_id %></td>
        <td><%= inventory_piece.quantity %></td>
        <td><%=l inventory_piece.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_inventory_piece_path(inventory_piece), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      inventory_piece_path(inventory_piece),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inventory_piece_path,
            :class => 'btn btn-primary' %>
