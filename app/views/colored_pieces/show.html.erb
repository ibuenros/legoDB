<%- model_class = ColoredPiece -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @colored_piece.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:piece_id) %>:</strong></dt>
  <dd><%= @colored_piece.piece_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color_id) %>:</strong></dt>
  <dd><%= @colored_piece.color_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              colored_pieces_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_colored_piece_path(@colored_piece), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              colored_piece_path(@colored_piece),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
