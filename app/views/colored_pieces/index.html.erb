<%- model_class = ColoredPiece -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:piece_id) %></th>
      <th><%= model_class.human_attribute_name(:color_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @colored_pieces.each do |colored_piece| %>
      <tr>
        <td><%= link_to colored_piece.id, colored_piece_path(colored_piece) %></td>
        <td><%= colored_piece.code %></td>
        <td><%= colored_piece.piece_id %></td>
        <td><%= colored_piece.color_id %></td>
        <td><%=l colored_piece.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_colored_piece_path(colored_piece), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      colored_piece_path(colored_piece),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_colored_piece_path,
            :class => 'btn btn-primary' %>
