<%= simple_form_for @piece, :html => { :class => 'form-horizontal' } do |f| %>

    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.association :piece_type, label_method: :name %>
    <%= f.input :width %>
    <%= f.input :length %>
    <%= f.input :height %>
    <%= f.button :submit %>

<% end %>
